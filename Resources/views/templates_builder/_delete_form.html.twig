<form method="post" action="{{ path('templates_builder_delete', {'id': component_template.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir définitivement supprimer ce composant ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ component_template.id) }}">
    <button class="btn btn-outline-danger">Supprimer</button>
</form>
