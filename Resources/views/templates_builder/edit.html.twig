{% extends "@AkyosCms/layout.html.twig" %}

{% block title %}Éditer un composant{% endblock %}

{% block page_content %}
    <div class="content">

        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <h3 class="block-title">Éditer le composant</h3>
                <a href="{{ path('templates_builder_generate_fixture', {'id' : form.vars.value.id }) }}"
                   class="btn btn-outline-secondary"><i class="fas fa-file-download"></i> Générer les fixtures</a>
                <a href="{{ path('templates_builder_index') }}" class="btn btn-outline-secondary"><i
                            class="fas fa-arrow-left"></i> Retour</a>
            </div>
            <div class="card-body">
                {{ include('@AkyosBuilder/templates_builder/_form.html.twig') }}
            </div>
        </div>

        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <h3 class="block-title">Supprimer le composant</h3>
                {{ include('@AkyosBuilder/templates_builder/_delete_form.html.twig') }}
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset("/bundles/akyosbuilder/builderjs.js") }}" type="application/javascript"></script>
{% endblock %}
