{% apply spaceless %}
    {% set style = {} %}

    {% set style = (values.font is defined and values.font ? style|merge({'font-family' : values.font}) : style|merge({'font-family' : "inherit"})) %}

    {% if values.font_size is defined and values.font_size and values.font_size|number_format > 0 %}{% set style = style|merge({'font-size' : values.font_size|number_format ~ 'px'}) %}{% endif %}
    {% if values.padding is defined and values.padding != "" %}{% set style = style|merge({'padding' : values.padding}) %}{% endif %}
    {% if values.margin is defined and values.margin != "" %}{% set style = style|merge({'margin' : values.margin}) %}{% endif %}

    <{{ values.tag is defined and values.tag ? values.tag : "h2" }} class="component-title {{ values.has_decoration is defined and values.has_decoration and values.has_decoration ? "component-title--underline" : "" }} component-title--{{ values.position is defined and values.position ? values.position : "left" }} component-title--weight-{{ values.font_weight is defined and values.font_weight ? values.font_weight : "default" }}{{ values.text_transform is defined and values.text_transform ? ' '~values.text_transform : false }} component-title--{{ values.color is defined and values.color ? values.color : "primary" }} {{ customClasses ? ' '~customClasses : '' }}" style="{% for k, s in style %}{{ k~':'~s~';' }}{% endfor %}">{{ values.text_content is defined and values.text_content ? values.text_content|raw : "" }}</{{ values.tag is defined and values.tag ? values.tag : "h2" }}>
{% endapply %}
