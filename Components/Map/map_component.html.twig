<div class="component-map">
    <div id="map" data-lat="{{ values.latitude is defined and values.latitude ? values.latitude : "47.3167" }}"
         data-lng="{{ values.longitude is defined and values.longitude ? values.longitude : "5.0167" }}"
         data-zoom="{{ values.zoom is defined and values.zoom ? values.zoom : "12" }}"
         data-layer="{{ values.layer is defined and values.layer ? values.layer : "satellite" }}"></div>
</div>
