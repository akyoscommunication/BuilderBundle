{% set random = random() %}

<div class="aky-gallery gallery{{ random }}" data-gallery="{{ random }}">
<div class="images pictures {{ values.background_size }}">
    {% for key, image in values.images %}
        <div class="picture" data-index="{{ key }}" data-caption="{{ getImageAltById(image) }}" data-image="{{ getImagePathById(image) }}" data-title="{{ getImageNameById(image) }}">
            {{ renderFileManager(image)|raw }}
        </div>
    {% endfor %}
</div>

<div id="galleryModal{{ random }}" class="gallery-modal modal fade" tabindex="-1" role="dialog" aria-labelledby="galleryModal" aria-hidden="true">
<div class="modal-dialog modal-xl modal-dialog-centered" role="document">
    <div class="modal-content">
        <div class="modal-body">
            {% for key, image in values.images %}
                <div class="slide">
                    {{ renderFileManager(image, false)|raw }}
                </div>
            {% endfor %}
        </div>
        <div class="modal-footer">
            <div class="controls-container">
                <ul>
                    <li><a href="javascript:void(0);" class="slides-controls prev" data-value="-1"><img src="data:image/png;base64," alt=""></a></li>
                    <li><a href="javascript:void(0);" class="slides-controls next" data-value="1"><img src="data:image/png;base64," alt=""></a></li>
                    <li><a href="javascript:void(0);" data-dismiss="modal"><i class="fas fa-times"></i></a></li>
                    </ul>
                </div>
            <div class="caption-container">
                <span>&copy; {{ core_options.siteTitle }} </span>
                <span id="caption{{ random }}"></span>
                </div>
            </div>
        </div>
    </div>
</div>
