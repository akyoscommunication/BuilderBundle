<div class="component-last-news {{ customClasses is defined ? ' '~customClasses : '' }}">
    {% for new in news %}
        {{ renderComponentBySlug('news', {
            'post' : new
        })|raw }}
    {% else %}
        <div class="no-item w-100 text-center">{{ values.no_item_text is defined ? values.no_item_text : "Aucune actualit√©" }}</div>
    {% endfor %}
</div>