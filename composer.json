{
  "name": "akyos/builder-bundle",
  "description": "AkyosCMS for Symfony - Builder",
  "type": "symfony-bundle",
  "require": {
    "php": "^7.2"
  },
  "require-dev": {
  },
  "license": "proprietary",
  "authors": [
    {
      "name": "Lilian Carneau",
      "email": "lilian@akyos.com"
    },
    {
      "name": "Johan JOULKVA",
      "email": "johan@akyos.com"
    },
    {
      "name": "Thomas Sebert",
      "email": "thomas@akyos.com"
    }
  ],
  "scripts": {
    "after-install-dependencies": [
      "echo 'builder:' >> routes.yaml",
      "echo '  resource: '../lib/BuilderBundle/Controller/'' >> routes.yaml",
      "echo '  type:     annotation' >> routes.yaml,",
      "mv lib/BuilderBundle/InstallFiles/Config/twig.yaml config/packages",
      "mv lib/BuilderBundle/InstallFiles/Templates/content.html.twig templates/bundles/AkyosCoreBundle/front",
      "rm -rf lib/BuilderBundle/InstallFiles",
      "php bin/console ckeditor:install",
      "php bin/console asset:install --symlink",
      "composer dump-autoload",
      "php bin/console make:migration",
      "php bin/console doctrine:migrations:migrate",
      "mkdir src/Components"
    ]
  },
  "minimum-stability": "dev",
  "autoload": {
    "psr-4": {
      "Akyos\\BuilderBundle\\": ""
    }
  }
}
